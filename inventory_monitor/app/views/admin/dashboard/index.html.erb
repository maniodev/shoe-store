<div class="container-for-admin">
  <main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">
      <div class="row wow fadeIn">
        <div class="col-md-9 mb-4">
          <div class="card">
            <div class="card-header text-center">
              Chart
            </div>
            <div class="card-body d-sm-flex justify-content-center">
              <form class="form-inline d-flex justify-content-center">
                <div class="custom-control-inline">
                  <label for="validationCustom03">Store</label>
                  <select id="store" class="custom-select mx-sm-3 mb-2">
                    <option  selected value="">All</option>
                    <% @store_names.each do |store_name| %>
                      <option value="<%= store_name %>"><%= store_name %></option>
                    <%  end %>
                  </select>
                </div>
                <div class="custom-control-inline">
                  <label for="validationCustom03">Shoe</label>
                  <select id="shoe" class="custom-select mx-sm-3 mb-2">
                    <option selected value="">All</option>
                    <% @shoe_models.each do |shoe_model| %>
                      <option value="<%= shoe_model %>"><%= shoe_model %></option>
                    <%  end %>
                  </select>
                </div>
              </form>
            </div>
            <canvas id="bar-chart" width="800" height="300"></canvas>
            <div>
              <table id="myTable" class="table table-hover table-striped">
                <thead class="thead-li ght lighten-4">
                  <tr>
                    <th>Product</th>
                    <th>Store</th>
                    <th>Units in Hands</th>
                  </tr>
                </thead>
                <tbody id="inventory">
                  <tr>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="card mb-4">
            <div class="card-header text-center">
              Sales
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <div id="sales"/>
              </ul>
                </div>
            </div>
            <div class="card mb-4">
              <div class="card-header text-center">
                Recommedations
              </div>
              <div class="card-body">
                <ul class="list-group list-group-flush">
                  <div id="notification" />
                </ul>
                  </div>
              </div>
            </div>
          </div>

  </main>
        </div>
